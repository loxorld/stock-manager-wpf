<Window x:Class="StockManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StockManager.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Stock Manager"
        Height="540" Width="1040"
        WindowStartupLocation="CenterScreen"
        FontSize="13">

    <!-- Atajos -->
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
        <KeyBinding Modifiers="Control" Key="N" Command="{x:Static local:MainWindow.NewSkuCmd}" />
        <KeyBinding Modifiers="Control" Key="M" Command="{x:Static local:MainWindow.MovementCmd}" />
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.NewSkuCmd}" Executed="NewSku_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.MovementCmd}" Executed="Movement_Executed"/>
    </Window.CommandBindings>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12" LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="PackageVariantClosed" Width="22" Height="22" Margin="0,0,10,0" Opacity="0.9"/>
                <TextBlock Text="Stock" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Actions -->
            <ToolBar DockPanel.Dock="Right"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="0"
                     Margin="0">

                <Button Click="Dashboard_Click"
                        ToolTip="Dashboard"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ChartTimelineVariant" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <Separator Width="12" Opacity="0"/>

                <Button Click="NewSku_Click"
                        ToolTip="Nuevo SKU (Ctrl+N)"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Nuevo SKU"/>
                    </StackPanel>
                </Button>

                <Button Click="EditSku_Click"
                        ToolTip="Editar SKU"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Editar"/>
                    </StackPanel>
                </Button>

                <!-- Eliminar SKU (prolijo, rojo, y deshabilitado sin selección) -->
                <Button Click="DeleteSku_Click"
                        ToolTip="Eliminar SKU seleccionado"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedItem}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Opacity" Value="0.6"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="DeleteOutline"
                                                 Width="18" Height="18"
                                                 Margin="0,0,8,0"
                                                 Foreground="#C62828"/>
                        <TextBlock Text="Eliminar SKU" Foreground="#C62828"/>
                    </StackPanel>
                </Button>

                <Separator Width="12" Opacity="0"/>

                <Button Click="RegisterMovement_Click"
                        ToolTip="Registrar movimiento (Ctrl+M)"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SwapVertical" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Movimiento"/>
                    </StackPanel>
                </Button>

                <Button Click="ViewHistory_Click"
                        ToolTip="Ver historial"
                        Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Historial"/>
                    </StackPanel>
                </Button>

            </ToolBar>
        </DockPanel>

        <!-- Filters card -->
        <materialDesign:Card Grid.Row="1" Padding="12" Margin="0,0,0,12">
            <DockPanel LastChildFill="True">
                <!-- Left filters -->
                <WrapPanel DockPanel.Dock="Left" VerticalAlignment="Center">

                    <ComboBox Width="190" Margin="0,0,12,0"
                              ItemsSource="{Binding CategoryOptions}"
                              SelectedItem="{Binding SelectedCategoryOption}"
                              DisplayMemberPath="Display"
                              materialDesign:HintAssist.Hint="Categoría"/>

                    <ComboBox Width="150" Margin="0,0,12,0"
                              ItemsSource="{Binding ActiveOptions}"
                              SelectedItem="{Binding SelectedActive}"
                              materialDesign:HintAssist.Hint="Estado"/>

                    <CheckBox Content="Stock bajo" Margin="0,0,10,0"
                              VerticalAlignment="Center"
                              IsChecked="{Binding StockLowOnly}"/>

                    <TextBox Width="80"
                             VerticalContentAlignment="Center"
                             Text="{Binding StockLowThreshold, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="≤ umbral"/>
                </WrapPanel>

                <!-- Search -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Width="340" Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Buscar por nombre..."
                             materialDesign:TextFieldAssist.PrefixText=""/>

                    <Button Width="110"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Buscar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <!-- Grid -->
            <materialDesign:Card Grid.Column="0" Padding="0">
                <Grid>
                    <DataGrid ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowHeight="34"
                              Margin="0">

                        <!-- Resaltado stock bajo -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <!-- Rojo crítico 0-2 -->
                                    <DataTrigger Binding="{Binding Stock}" Value="0">
                                        <Setter Property="Background" Value="#FFFFD6D6"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Stock}" Value="1">
                                        <Setter Property="Background" Value="#FFFFD6D6"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Stock}" Value="2">
                                        <Setter Property="Background" Value="#FFFFD6D6"/>
                                    </DataTrigger>

                                    <!-- Amarillo bajo 3-5 -->
                                    <DataTrigger Binding="{Binding Stock}" Value="3">
                                        <Setter Property="Background" Value="#FFFFF4C8"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Stock}" Value="4">
                                        <Setter Property="Background" Value="#FFFFF4C8"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Stock}" Value="5">
                                        <Setter Property="Background" Value="#FFFFF4C8"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="3*"/>
                            <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="1.1*"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="0.7*"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat={}{0:C}}" Width="0.9*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Loading overlay -->
                    <Grid Background="#55FFFFFF"
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <materialDesign:Card Padding="18"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar Width="140" Height="6" IsIndeterminate="True"/>
                                <TextBlock Text="  Cargando..." VerticalAlignment="Center" Margin="12,0,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Detail -->
            <materialDesign:Card Grid.Column="1" Margin="12,0,0,0" Padding="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Detalle" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DetailTitle}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Categoría" Opacity="0.7"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DetailCategory}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Estado" Opacity="0.7"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DetailActive}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Stock" Opacity="0.7"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DetailStock}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Precio" Opacity="0.7"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DetailPrice, StringFormat={}{0:C}}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Costo" Opacity="0.7"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DetailCost, StringFormat={}{0:C}}"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Margen" Opacity="0.7"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DetailMargin, StringFormat={}{0:C}}"/>
                    </Grid>

                    <StackPanel Grid.Row="2" Margin="0,0,0,12">
                        <TextBlock Text="Último movimiento" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding LastMovementText}"
                                   Opacity="0.9"
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Acciones rápidas" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Width="150" Margin="0,0,10,0"
                                    Command="{Binding QuickPurchaseCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CartPlus" Width="18" Height="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="+1 compra"/>
                                </StackPanel>
                            </Button>

                            <Button Width="150"
                                    Command="{Binding QuickSaleCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CartMinus" Width="18" Height="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="-1 venta"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Button Margin="0,0,0,8"
                                Click="RegisterMovement_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SwapVertical" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Registrar movimiento..."/>
                            </StackPanel>
                        </Button>

                        <Button Click="ViewHistory_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="History" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Ver historial..."/>
                            </StackPanel>
                        </Button>

                        <!-- Overlay detalle -->
                        <Grid Background="#55FFFFFF"
                              Visibility="{Binding IsDetailLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="-14,-14,-14,-14">
                            <materialDesign:Card Padding="14"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <ProgressBar Width="120" Height="6" IsIndeterminate="True"/>
                                    <TextBlock Text="  Cargando detalle..." VerticalAlignment="Center" Margin="12,0,0,0"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>

                    </StackPanel>
                </Grid>
            </materialDesign:Card>

        </Grid>
    </Grid>
</Window>
