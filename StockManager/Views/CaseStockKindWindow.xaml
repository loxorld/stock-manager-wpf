<Window x:Class="StockManager.Views.CaseStockKindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tipo de funda"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="320">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Seleccioná el tipo de funda"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,16">
            <RadioButton x:Name="WomenRadio"
                         Content="Mujer"
                         GroupName="CaseStockKind"
                         Margin="0,0,0,6"/>
            <RadioButton x:Name="MenRadio"
                         Content="Hombre"
                         GroupName="CaseStockKind"/>
        </StackPanel>

        <StackPanel x:Name="PaymentMethodPanel" Grid.Row="2" Orientation="Vertical" Margin="0,0,0,16" Visibility="Collapsed">
            <TextBlock Text="Medio de pago" Margin="0,0,0,6"/>
            <RadioButton x:Name="CashRadio"
                         Content="Efectivo"
                         GroupName="PaymentMethod"
                         Margin="0,0,0,6"/>
            <RadioButton x:Name="MercadoPagoRadio"
                         Content="MercadoPago / Tarjeta"
                         GroupName="PaymentMethod"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Aceptar" Width="90" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>