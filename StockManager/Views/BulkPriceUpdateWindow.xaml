<Window x:Class="StockManager.Views.BulkPriceUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Actualizar precios por tipo"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="420">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Actualizar precios por tipo"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Categoría"
                       VerticalAlignment="Center"/>

            <ComboBox Grid.Column="1"
                      Width="230"
                      ItemsSource="{Binding CategoryOptions}"
                      DisplayMemberPath="Display"
                      SelectedItem="{Binding SelectedCategoryOption, Mode=TwoWay}"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10"
              Visibility="{Binding IsCaseCategory, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Tipo de funda"
                       VerticalAlignment="Center"/>

            <ComboBox Grid.Column="1"
                      Width="230"
                      ItemsSource="{Binding CaseTypeOptions}"
                      SelectedItem="{Binding SelectedCaseType, Mode=TwoWay}"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,10"
              Visibility="{Binding IsProtectorCategory, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Tipo templado"
                       VerticalAlignment="Center"/>

            <ComboBox Grid.Column="1"
                      Width="230"
                      ItemsSource="{Binding ProtectorTypeOptions}"
                      SelectedItem="{Binding SelectedProtectorType, Mode=TwoWay}"/>
        </Grid>

        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Precio"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Column="1"
                     Width="140"
                     VerticalContentAlignment="Center"
                     Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Costo"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Column="1"
                     Width="140"
                     VerticalContentAlignment="Center"
                     Text="{Binding CostText, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <TextBlock Grid.Row="6"
                   Text="Se actualizará el precio y/o costo de todos los ítems del tipo seleccionado."
                   TextWrapping="Wrap"
                   Foreground="#666666"
                   Margin="0,0,0,10"
                   Width="360"/>

        <TextBlock Grid.Row="7"
                   Text="{Binding ErrorMessage}"
                   Foreground="DarkRed"
                   TextWrapping="Wrap"
                   Width="360"/>

        <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Cancelar"
                    Width="90"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Actualizar"
                    Width="110"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>