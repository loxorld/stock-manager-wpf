<Window x:Class="StockManager.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Dashboard"
        Height="600" Width="980"
        WindowStartupLocation="CenterOwner"
        FontSize="13">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="KpiCardStyle" TargetType="materialDesign:Card">
                <Setter Property="Padding" Value="14"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12" LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="ChartTimelineVariant" Width="22" Height="22" Margin="0,0,10,0" Opacity="0.9"/>
                <TextBlock Text="Dashboard" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <Button DockPanel.Dock="Right"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18" Margin="0,0,8,0"/>
                    <TextBlock Text="Cerrar"/>
                </StackPanel>
            </Button>
        </DockPanel>

        <!-- Filters card -->
        <materialDesign:Card Grid.Row="1" Padding="12" Margin="0,0,0,14">
            <DockPanel LastChildFill="True">

                <!-- Period buttons -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Width="110" Margin="0,0,8,0"
                            Click="Today_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarToday" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Hoy"/>
                        </StackPanel>
                    </Button>

                    <Button Width="110" Margin="0,0,8,0"
                            Click="Week_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarWeek" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Semana"/>
                        </StackPanel>
                    </Button>

                    <Button Width="110" Margin="0,0,14,0"
                            Click="Month_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarMonth" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Mes"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Range -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Width="160" Margin="0,0,10,0"
                                materialDesign:HintAssist.Hint="Desde"/>

                    <DatePicker SelectedDate="{Binding ToDate}"
                                Width="160" Margin="0,0,10,0"
                                materialDesign:HintAssist.Hint="Hasta"/>

                    <Button Width="120"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding ApplyRangeCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Aplicar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </DockPanel>
        </materialDesign:Card>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- KPIs -->
            <UniformGrid Grid.Row="0" Columns="5" Margin="0,0,0,12">
                <materialDesign:Card Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="CurrencyUsd" Width="22" Height="22" Opacity="0.7"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ingresos" Opacity="0.75"/>
                            <TextBlock Text="{Binding Revenue, StringFormat={}{0:C}}"
                                       FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding RevenueDeltaText}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Cash" Width="22" Height="22" Opacity="0.7"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Efectivo" Opacity="0.75"/>
                            <TextBlock Text="{Binding CashRevenue, StringFormat={}{0:C}}"
                                       FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CashRevenueDeltaText}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="CreditCardOutline" Width="22" Height="22" Opacity="0.7"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="MercadoPago / tarjeta" Opacity="0.75"/>
                            <TextBlock Text="{Binding CardRevenue, StringFormat={}{0:C}}"
                                       FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CardRevenueDeltaText}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>


                <materialDesign:Card Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="PackageVariant" Width="22" Height="22" Opacity="0.7"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Unidades vendidas" Opacity="0.75"/>
                            <TextBlock Text="{Binding UnitsSold}"
                                       FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding UnitsSoldDeltaText}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Padding="14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="ReceiptTextOutline" Width="22" Height="22" Opacity="0.7"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ventas (movimientos)" Opacity="0.75"/>
                            <TextBlock Text="{Binding SalesCount}"
                                       FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SalesCountDeltaText}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </UniformGrid>

            <!-- Chart + Top products -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" Padding="12" Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Ventas por día"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <Grid Grid.Row="1">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          Visibility="{Binding HasDailySales, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding DailySales}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="70"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Date, StringFormat={}{0:dd/MM}}" Opacity="0.7"/>
                                                <ProgressBar Grid.Column="1"
                                                             Height="10"
                                                             VerticalAlignment="Center"
                                                             Maximum="{Binding DataContext.MaxDailyRevenue, RelativeSource={RelativeSource AncestorType=Window}}"
                                                             Value="{Binding Revenue}"/>
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Revenue, StringFormat={}{0:C}}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding HasDailySales, Converter={StaticResource BooleanNegationConverter}}">
                                <materialDesign:PackIcon Kind="ChartLine" Width="36" Height="36" Opacity="0.35"/>
                                <TextBlock Text="No hay ventas para graficar"
                                           FontWeight="SemiBold"
                                           Margin="0,8,0,2"
                                           Opacity="0.8"/>
                                <TextBlock Text="Probá otro período o rango de fechas."
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <StackPanel Grid.Column="1">
                    <materialDesign:Card Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Top por unidades" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <Grid Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding TopByUnits}"
                                              Visibility="{Binding HasTopByUnits, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Units}" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="Sin datos en este período."
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.7"
                                           Visibility="{Binding HasTopByUnits, Converter={StaticResource BooleanNegationConverter}}"/>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Top por ingresos" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <Grid Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding TopByRevenue}"
                                              Visibility="{Binding HasTopByRevenue, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Revenue, StringFormat={}{0:C}}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="Sin datos en este período."
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.7"
                                           Visibility="{Binding HasTopByRevenue, Converter={StaticResource BooleanNegationConverter}}"/>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>


            <!-- Tables -->
            <materialDesign:Card Grid.Row="2" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Historial de ventas"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding SalesHistory}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowHeight="34"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha"
                                                Binding="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                                                Width="170"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding SkuName}" Width="*"/>
                            <DataGridTextColumn Header="Cant." Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="P. Unit."
                                                Binding="{Binding UnitPrice, StringFormat={}{0:C}}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Total"
                                                Binding="{Binding Total, StringFormat={}{0:C}}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Nota" Binding="{Binding Note}" Width="220"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

        </Grid>
    </Grid>
</Window>
