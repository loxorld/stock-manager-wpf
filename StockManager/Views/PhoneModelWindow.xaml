<Window x:Class="StockManager.Views.PhoneModelsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modelos de celular"
        Width="720" Height="460"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,12" LastChildFill="True">
            <TextBlock Text="Modelos"
                       FontSize="20"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Nuevo" Width="90" Margin="0,0,10,0" Click="New_Click"/>
                <Button Content="Editar" Width="90" Margin="0,0,10,0" Click="Edit_Click"/>
                <TextBox Width="240" Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Buscar" Width="90" Command="{Binding LoadCommand}"/>
            </StackPanel>
        </DockPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Marca" Binding="{Binding Brand}" Width="1.5*"/>
                <DataGridTextColumn Header="Modelo" Binding="{Binding ModelName}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
